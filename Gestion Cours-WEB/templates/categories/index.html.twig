{% extends 'template.html.twig' %}


{% block form %}


<div class="container-fluid">
    <h3 class="m-0 font-weight-bold text-primary">Categories </h3>

    <!-- Page Heading -->
    <div class="card shadow-lg h-75 m-4 mt-8">

        <div class="card-body">
            <script>
                $(".recherche").on("submit", function(event) {
                    // prevent page reload
                    event.preventDefault();

                    $.ajax({
                        url: '{{ path('categories_index') }}',
                        type: 'POST',
                        success: function() {
                            // perform dom update to show search results
                        }
                    });
                });
            </script>

            <div class="card-body">
                <form method="get" type="submit" id="recherche"
                      class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                    <div class="input-group">
                        <input name="users"  class="form-control bg-light border-0 small" placeholder="Search for..."
                               aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <a class="btn btn-primary" >
                                <i class="fas fa-search fa-sm"></i>
                            </a>
                        </div>
                    </div>
                </form>
                <br>
                <br>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>

            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>Image</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.type }}</td>
                <td>{{ category.description }}</td>
               <td> {% if category.type=='Yoga' %}
                    <img src="{{ asset("yogaa.jpg") }}">
                {% elseif category.type=='Cardio' %}
                    <img src="{{ asset("cardio.png") }}">
                {% elseif category.type=='Running' %}
                    <img src="{{ asset("running.png") }}">
                {% elseif category.type=='Zumba' %}
                    <img src="{{ asset("zumba.jpg") }}">
                {% else%}
                    <img src="{{ asset("sport.png") }}">

                {% endif %}
               </td>
                <td>
                    <a class="btn btn-danger btn-icon-split" href="{{ path('categories_show', {'type': category.type}) }}"> <span class="icon text-white-50">
                            <i class="fas fa-eye"></i>
                            </span></a>
                    <a class="btn btn-info btn-icon-split" href="{{ path('categories_edit', {'type': category.type}) }}"><span class="icon text-white-50">
                            <i class="fas fa-fw fa-wrench"></i>
                            </span></a></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                <a class="btn btn-primary" href="{{ path('categories_new') }}">Create new</a>
{% endblock %}
